@model ShopWebApplication.Models.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h4>Edit Product</h4>
@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="form-horizontal">

    @Html.ValidationSummary(true)
    @Html.Hidden("ProductId", Model.ProductID)
    <hr />
    <div class="form-group ">
        <div class="col-md-6">
            <div class="col-md-12">
                <label class="col-md-3">Name:</label>
                <input class="col-md-8" name="ProductName" type="text" value="@Model.ProductName" />
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Supplier:</label>
                @Html.DropDownList("SupplierID",null, new { @class = "form -control col-md-8" })
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Category:</label>
                @Html.DropDownList("CategoryID", null, new { @class = "form -control col-md-8" })
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Date Add:</label>
                <input class="col-md-8" name="DateAdded" type="date" value="@Model.DateAdded.ToString()" />
            </div>
            <div class="col-md-12">
                <label class="col-md-3">PurchasePrice:</label>
                <input class="col-md-8" name="PurchasePrice" type="number" value="@Model.PurchasePrice">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Price:</label>
                <input class="col-md-8" name="Price" type="number" value="@Model.Price">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Total:</label>
                <input class="col-md-8" name="Amount" type="number" value="@Model.Amount">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Sold:</label>
                <input class="col-md-8" name="Sold" type="number" value="@Model.Sold">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Picture:</label>
                <input class="col-md-5 " name="PhotoPath" type="file" style="padding:0;" value="@Model.PhotoPath" />                  
                <span>@ViewBag.upload</span>
                <img class="col-md-5" src="@Url.Content("~/Content/Image/"+ Model.PhotoPath)" 
                     style="margin-right:auto; height:auto; width:100%; max-width:7rem;border:1px solid" />
            </div>

        </div>
        <div class="col-md-6">
            <label>Descriptions</label>
            <textarea  name="Descriptions" style="height:100%;">@Model.Descriptions</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-secondary">@Html.ActionLink("Back to List", "Index")</button>
            <input type="submit" value="SAVE" class="btn btn-success" />
        </div>
    </div>
</div>
}

