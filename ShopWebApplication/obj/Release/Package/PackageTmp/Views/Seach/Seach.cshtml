}
<div class="container">
    <div class="bocuc bocuc_27">
        <div class="loprong ">
            <div class="padding ">
                <div class="sanpham_box " style="border:0;">
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li id="sp_27_10 ">
                                <div class="div_noidung ">
                                    <div class="truong anh ">
                                        <a href="http://net-121pm.web7b.com/ao-dai-cach-tan-sara-mau-den-theu-hoa-id1.html ">
