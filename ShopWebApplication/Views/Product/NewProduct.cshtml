@model ShopWebApplication.Models.Product

@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>NEW PRODUCT</h2>

@using (Html.BeginForm("NewProduct", "Product", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <hr />
    <div class="form-group ">
        <div class="col-md-6">
            <div class="col-md-12">
                <label class="col-md-3">Name:</label>
                <input class="col-md-8" name="ProductName" type="text" />
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Supplier:</label>
                @Html.DropDownList("SupplierID", null, new { @class = "form -control col-md-8" })
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Category:</label>
                @Html.DropDownList("CategoryID", null, new { @class = "form -control col-md-8" })
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Date Add:</label>
                <input class="col-md-8" name="DateAdded" type="date" />
            </div>
            <div class="col-md-12">
                <label class="col-md-3">PurchasePrice:</label>
                <input class="col-md-8" name="PurchasePrice" type="number">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Price:</label>
                <input class="col-md-8" name="Price" type="number">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Total:</label>
                <input class="col-md-8" name="Amount" type="number">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Sold:</label>
                <input class="col-md-8" name="Sold" type="number">
            </div>
            <div class="col-md-12">
                <label class="col-md-3">Picture:</label>
                <input class="col-md-8 " name="PhotoPath" type="file" style="padding:0;"/>
            </div>

        </div>
        <div class="col-md-6">
            <label>Descriptions</label>
            <textarea name="Descriptions" style="height:100%;"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" class="btn btn-secondary">@Html.ActionLink("Back to List", "Index")</button>
            <input type="submit" value="SAVE" class="btn btn-success" />
        </div>
    </div>
</div>
}





